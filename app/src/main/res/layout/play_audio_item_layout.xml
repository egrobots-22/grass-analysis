<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="2dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

<!--    <FrameLayout-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_gravity="center">-->

    <FrameLayout
        android:id="@+id/controllers_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_action_play"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_action_pause"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/audio_progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:visibility="visible" />

    </FrameLayout>

<!--    </FrameLayout>-->

<!--    <LinearLayout-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_weight="4"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:orientation="vertical">-->

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressBackgroundTint="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/controllers_layout"
        app:layout_constraintStart_toEndOf="@id/controllers_layout"
        app:layout_constraintTop_toTopOf="@id/controllers_layout" />

    <TextView
        android:id="@+id/audioNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="bottom"
        android:text="User: lskj37hksjd"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/seek_bar"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />

    <!--    </LinearLayout>-->

    <TextView
        android:id="@+id/audio_progress_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="00:00"
        android:textSize="11sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar"
        app:layout_constraintStart_toEndOf="@id/seek_bar"
        app:layout_constraintTop_toTopOf="@id/seek_bar" />

    <TextView
        android:id="@+id/audio_length_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="00:05"
        android:textSize="11sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar"
        app:layout_constraintStart_toEndOf="@id/audio_progress_textview"
        app:layout_constraintTop_toTopOf="@id/seek_bar" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/audio_reactions_buttons"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:background="@drawable/cornered_black_bg"
        android:orientation="horizontal"
        android:theme="@style/Theme.MaterialComponents.Bridge"
        app:layout_constraintBottom_toBottomOf="@id/audioNameTextView"
        app:layout_constraintEnd_toEndOf="@id/audio_length_textview"
        app:layout_constraintTop_toBottomOf="@+id/audioNameTextView"
        app:layout_constraintStart_toStartOf="@id/audio_progress_textview"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/like_button"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:icon="@drawable/icons8_thumbs_up_24"
            app:iconGravity="start"
            app:iconPadding="4dp"
            app:iconSize="12dp"
            android:checkable="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dislike_button"
            style="@style/ToggleButtonWithIconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:icon="@drawable/icons8_thumbs_down_24"
            app:iconGravity="start"
            app:iconPadding="4dp"
            app:iconSize="12dp"
            android:checkable="false"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>


</androidx.constraintlayout.widget.ConstraintLayout>